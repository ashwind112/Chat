@model ChatApplication.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="panel-heading">
        <h2>Enter Credetials</h2>
    </div>
    <div class="panel-body">
        @using(@Html.BeginForm("Add", "Register"))
        {
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName,new { type="text",@class="form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName,new { type="text",@class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { type="password", @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        }
    </div>
</div>

